<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.group20.assignment2.mobilesensing.ViewReferencePointsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Reference Location"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textColor="#000000" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerReference"
            android:layout_gravity="center_horizontal"
            android:touchscreenBlocksFocus="false"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Wifi Fingerprint"
            android:id="@+id/textView2"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/lvWifiFingerprint"
            android:layout_gravity="center_horizontal"
            android:choiceMode="none" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Reference"
            android:id="@+id/buttonDeleteReference" />
    </LinearLayout>

</RelativeLayout>
